#include<stdio.h>
void print(int a[],int n);
void quicksort(int a[],int l,int u);
int partition(int a[],int l,int u);
void swap(int a,int b);
int main()
{
    int i,n;
    printf("enter the number of elements\n");
    scanf("%d",&n);
    int a[n];
    int l=0;
    int u=n-1;
    printf("enter the elements of array\n");
    for(i=0;i<n;i++)
    {
        printf("a[%d]= ",i);
        scanf("%d",&a[i]);
        printf("\n");
    }
    printf("the elements before sorting is\n");
    print(a,n);
    printf("\nthe elements after sorting is\n");
    quicksort(a,l,u);
    print(a,n);
    return 0;
}
void quicksort(int a[],int l,int u)
{
    if(l<u)
    {
        int loc=partition(a,l,u);
        quicksort(a,l,loc);
        quicksort(a,loc+1,u);
    }
}
int partition(int a[],int l,int u)
{
int start=l;
int end=u;
int pivot=a[l];
while(start<end)
{
    while(a[start]<=pivot&&start<end)
    {
        start++;
    }
    while(a[end]<pivot)
    {
        end--;
    }
    if(start<end);
    swap(a[start],a[end]);
}
a[l]=a[end];
a[end]=pivot;
return end;
}
void swap(int a,int b)
{
    int temp;
    temp=a;
    a=b;
    b=temp;
}
void print(int a[],int n)
{
    int i;
    for(i=0;i<n;i++)
    {
        printf("%d  ",a[i]);
    }
}
